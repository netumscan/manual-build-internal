<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Language Redirect</title>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const userLang = navigator.language || navigator.userLanguage; 
            if (userLang.startsWith('de')) {
                window.location.href = 'de/index.html'; // 德语页面
            } else if (userLang.startsWith('en')) {
                window.location.href = 'en/index.html'; // 英文页面
            } else if (userLang.startsWith('es')) {
                window.location.href = 'es/index.html'; // 西班牙语页面
            } else if (userLang.startsWith('fr')) {
                window.location.href = 'fr/index.html'; // 法语页面
            } else if (userLang.startsWith('it')) {
                window.location.href = 'it/index.html'; // 意大利语页面
            } else if (userLang.startsWith('ja')) {
                window.location.href = 'ja/index.html'; // 日语页面
            } else if (userLang.startsWith('zh')) {
                window.location.href = 'zh/index.html'; // 日语页面
            } else {
                window.location.href = 'en/index.html'; // 默认页面
            }
        });
    </script>
</head> 
<body style="display:none;">
    <h1>Redirecting...</h1>
    <p>If you are not redirected automatically, please <a href="en/index.html">click here</a>.</p>
</body>
</html>